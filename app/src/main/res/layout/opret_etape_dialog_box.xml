<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:text="Opret Etape"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="Skipper"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:id="@+id/inputSkipper"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:hint="Start Destination"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:id="@+id/inputStartDest"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BesÃ¦tning"
        android:textStyle="bold"
        android:textSize="20dp"

        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/besaetningList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="5dp"
        >


    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/navnIndput"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Navn"
            android:inputType="text"
            android:textColor="@color/colorPrimary" />


        <FrameLayout
            android:layout_width="111dp"
            android:layout_height="108dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="50dp"
            android:layout_weight="0"

            android:clipToPadding="false"
            android:padding="20dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:elevation="20dp"
                android:focusable="true"
                android:scaleType="center"
                android:src="@drawable/ic_add_black_24dp"
                android:tint="@color/white"

                />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/opretEtape_annuler_button"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:text="annuler"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/grey"
            />
        <Button
            android:id="@+id/opretEtape_start_button"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:text="Start Etape"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"

            android:backgroundTint="@color/colorPrimaryDark"
            />
    </LinearLayout>

</LinearLayout>