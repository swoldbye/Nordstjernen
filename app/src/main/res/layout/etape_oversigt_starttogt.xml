<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/etapeoversigt_start">

    <LinearLayout
        android:id="@+id/etapeoversigt_start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etapeoversigt_start_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/etapeoversigt_start_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Togtet er ikke startet"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/etapeoversigt_start_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Tryk på Start Togt for at påbegynde den første etape"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textAlignment="center"
            />
    </LinearLayout>



    <Button
        android:id="@+id/etapeoversigt_start_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Start Togt"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/etapeoversigt_start_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>