<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- SEJLFØRING =====================================-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/SmallTitle"
            android:text="Sejlføring" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space style="@style/EvenSpace" />

            <com.example.skibslogapp.view.utility.KingButton
                android:id="@+id/fButton"
                style="@style/DefaultButton"
                android:text="F" />

            <Space style="@style/EvenSpace" />

            <com.example.skibslogapp.view.utility.KingButton
                android:id="@+id/øButton"
                style="@style/DefaultButton"
                android:text="Ø" />

            <Space style="@style/EvenSpace" />

            <com.example.skibslogapp.view.utility.KingButton
                android:id="@+id/n1Button"
                style="@style/DefaultButton"
                android:text="N1" />

            <Space style="@style/EvenSpace" />

            <com.example.skibslogapp.view.utility.KingButton
                android:id="@+id/n2Button"
                style="@style/DefaultButton"
                android:text="N2" />

            <Space style="@style/EvenSpace" />

            <com.example.skibslogapp.view.utility.KingButton
                android:id="@+id/n3Button"
                style="@style/DefaultButton"
                android:text="N3" />

            <Space style="@style/EvenSpace" />

        </LinearLayout>
    </LinearLayout>


    <!-- HALS-SWITCH =====================================-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/SmallTitle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:letterSpacing="0"
            android:text="Hals" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <Space style="@style/EvenSpace" />

            <com.example.skibslogapp.view.utility.KingButton
                android:id="@+id/hals_bagbord_btn"
                style="@style/DefaultButton"
                android:layout_width="140dp"
                android:text="Bagbord"
                android:textSize="20dp" />

            <Space
                style="@style/EvenSpace"
                android:layout_weight="0.1" />

            <com.example.skibslogapp.view.utility.KingButton
                android:id="@+id/hals_styrbord_btn"
                style="@style/DefaultButton"
                android:layout_width="140dp"
                android:text="Styrbord"
                android:textSize="20dp" />

            <Space style="@style/EvenSpace" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>