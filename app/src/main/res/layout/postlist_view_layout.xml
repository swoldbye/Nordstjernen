<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/tidTextView"
            android:layout_width="40sp"
            android:layout_height="35sp"
            android:layout_weight="20"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/vindretningTextView"
            android:layout_width="40sp"
            android:layout_height="35dp"
            android:layout_weight="20"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/strømningTextView"
            android:layout_width="40sp"
            android:layout_height="35dp"
            android:layout_weight="20"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/kursTextView"
            android:layout_width="40sp"
            android:layout_height="35dp"
            android:layout_weight="20"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/sejlføringTextView"
            android:layout_width="40sp"
            android:layout_height="35dp"
            android:layout_weight="20"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/sejlstillingTextView"
            android:layout_width="40sp"
            android:layout_height="35dp"
            android:layout_weight="20"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/NoteTextView"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:text="Here is an arbitrary note"
        android:textSize="25sp" />

</LinearLayout>