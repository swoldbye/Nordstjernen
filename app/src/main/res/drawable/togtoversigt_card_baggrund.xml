<?xml version="1.0" encoding="utf-8"?>
<!--
    Man ikke kan se hvad man trykker på.
    Brug en baggrund som skifter farve afhængig af om viewet er trykket ned eller ej(en Selector).
    Se f.eks.  https://github.com/nordfalk/AndroidElementer/blob/master/app/src/main/res/drawable-v21/knapbg_blaa.xml

-->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/black">
    <item>
        <!-- En selector giver valg mellem forskellige drawables eller shapes i baggrunden
          afhængig af om en knap, listelement eller lignende er trykket ned, har fokus eller er disablet -->
        <selector>

            <item>

                <shape  >
                    <solid android:color="@color/lightGrey"/>
<!--
                    <padding
                        android:left="1dip"
                        android:right="1dip"
                        android:top="1dip"
                        android:bottom="1dip"
                        />
                    <corners
                        android:bottomLeftRadius="15dp"
                        android:bottomRightRadius="15dp"
                        android:topLeftRadius="15dp"
                        android:topRightRadius="15dp" />
                        -->
                </shape>
            </item>
        </selector>
    </item>
</ripple>